<style>
    /* Custom styles for the card */
    .custom-card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Custom styles for the image to maintain 1:1 aspect ratio */
    .card-img-top.aspect-ratio-square {
        width: 100%;
        height: 100%;
        overflow: hidden;
        object-fit: cover;
    }

    .blog {
        position: relative;
        width: 300px;
        height: 350px;
        padding: auto;
    }

    .blog img {
        width: 100%;
        height: 100%;

        object-fit: cover;
    }

    .buttom {
        margin-bottom: 10px;
    }
    .card-body{
        overflow: auto;
    }
    .para{
        height: 250px;
    }
</style>

